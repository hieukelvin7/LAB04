@model IEnumerable<LAB04.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<table>


    <div class="row">

        <ul class="course">
            @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="month">
                            @course.DateTime.ToString("dd")
                        </div>

                    </div>
                    <div class="details">
                        <span class="lecture">
                            @course.Name -
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-tongle-attendance">Going?</button>
                    </div>
                </li>
            }
        </ul>
        @section scripts{
            <script>
                $(document).ready(function () {
                    $(".js-tongle-attendance").click(function (e) {
                        var button = $(e.target);
                        $.post("/api/Attendence", { Id: button.attr("data-course-id") })
                            .done(function () {
                                alert("Register couse sucessfully!")
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-info")
                                    .text("Going")
                            }).fail(function () {
                                alert("Something Fail");
                            });
                    });
                });
            </script>
        }
    </div>
</table>