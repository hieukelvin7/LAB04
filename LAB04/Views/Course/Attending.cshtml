@model IEnumerable<LAB04.Models.Course>

@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attending</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>



<table>
    <div class="row">
        <ul class="course">
            @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="month">
                            @course.DateTime.ToString("dd")
                        </div>

                    </div>
                    <div class="details">
                        <span class="lecture">
                            @course.LectureName -
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>

</table>