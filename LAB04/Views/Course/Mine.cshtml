@model IEnumerable<LAB04.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <div class="row">
        <ul class="course">
            @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="month">
                            @course.DateTime.ToString("dd")
                        </div>

                    </div>
                    <div class="details">
                        <span class="lecture">
                            @course.LectureName
                        </span>
                        <br />
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                    <div class="action">
                        <a href="@Url.Action("Edit","Course",new { id=course.Id })">Edit</a>
                        <a href="@Url.Action("Delete","Course",new { id=course.Id })">Delete</a>
                    </div>
                </li>
            }
        </ul>
    </div>

</table>
